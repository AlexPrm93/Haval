section.advantage
  .container
    h2.advantage__title Ваше преимущество
    .advantage__items
      .advantage__items-first
        .features
          .features__info.first
            span.features__info-title Бонусы от автосалона
            p.features__info-text При покупке автомобиля дополнительные бонусы на сумму до 6000 руб.
        .features
          .features__info.second
            span.features__info-title Выгодный кредит
            p.features__info-text При покупке автомобиля в кредит, мы предоставляем дополнительную скидку.
        .features
          .features__info.third
            span.features__info-title Рассрочка 0%
            p.features__info-text Эксклюзивная программа рассрочки
        .features
          .features__info.fourth
            span.features__info-title  Trade-in c выгодой до 100 000 руб.
            p.features__info-text В нашем салоне вы выгодно обменяете свой автомобиль
      .advantage__items-second
        img(src="img/" + advantageImgPath alt="" class="" + imgClass)
    .price
      .price__items
        .price__items-first
          .price__info
            span.price__info-title #{title}
            span.price__info-equipment City
